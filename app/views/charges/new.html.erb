
<p>You are booking for <b><%= @address %></b> for <b><%= @custPkgQty %></b> parking spots from <b><%= @custCheckin%></b>  at <b><%= @custCheckinTime %></b> to <b><%= @custCheckout%></b> at <b><%= @custCheckoutTime %></b></p>


<%= form_tag result_charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $10.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Parking fee"
          data-amount="1000"
          data-locale="auto"></script>
<% end %>